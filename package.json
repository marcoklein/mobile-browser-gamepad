{
    "name": "mobile-browser-gamepad",
    "version": "0.1.3",
    "description": "Mobile HTML5 web gamepad for the smartphone.",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"copyfiles -u 1 src/assets/* dist\"  \"parcel src/index.html\"",
        "build": "concurrently \"copyfiles -u 1 src/assets/* docs\" \"parcel build src/index.html -d docs --public-url ./\"",
        "version:patch": "npm version patch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/marcoklein/mobile-browser-gamepad.git"
    },
    "keywords": [
        "Gamepad",
        "Mobile",
        "Web",
        "HTML5",
        "Smartphone"
    ],
    "author": "Marco Klein",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/marcoklein/mobile-browser-gamepad/issues"
    },
    "homepage": "https://github.com/marcoklein/mobile-browser-gamepad#readme",
    "devDependencies": {
        "@types/jquery": "^3.3.29",
        "@types/peerjs": "0.0.30",
        "concurrently": "^4.1.0",
        "copyfiles": "^2.1.0",
        "parcel-bundler": "^1.12.3",
        "typescript": "^3.4.5"
    },
    "dependencies": {
        "jquery": "^3.4.1",
        "peerjs": "^1.0.0",
        "screenfull": "^4.2.0"
    }
}
